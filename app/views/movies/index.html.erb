<h1>Movies#index</h1>

<%= form_tag({controller: 'movies', action: "index"},method: 'get') do %>
	<%= label_tag("Search for:") %>
	<%= text_field_tag :movie_title, params[:movie_title], placeholder: "movie title" %>
  <%= submit_tag("Search") %>
<% end %>


<h2>Listing movies:</h2>



<% @movies_result.each do |movie| %>
<%= movie['title'] %>
<%= image_tag movie['urlPoster']%>
<%= movie['genres'] %>
<hr>
<% end %>

<%= @movies_result.count %>