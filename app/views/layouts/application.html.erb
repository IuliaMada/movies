<!DOCTYPE html>
<html>
  <head>
    <title>Movies</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">LOGOOOOOO</a>
        </div>
        <div>
          <ul class="nav navbar-nav">
            <li class="active"><a href="/">Home</a></li>
            <li><%= link_to "About","#" %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
                <li><%= link_to "All users", users_path %></li>
                <li><%= link_to "<span class='glyphicon glyphicon-user'></span> #{current_user.first_name}".html_safe, user_path(current_user) %></li>
                <li><%= link_to '<i class="glyphicon glyphicon-log-out"></i> Logout'.html_safe, destroy_user_session_path , :method => :delete %></li>
              <% else %>
                <li><%= link_to '<i class="glyphicon glyphicon-log-in"></i> Login'.html_safe, new_user_session_path %></li>
                <li><%= link_to '<span class="glyphicon glyphicon-user"></span>  Sign Up'.html_safe, new_user_registration_path %></li>
              <% end %>
            </ul>
        </div>
      </div>
    </nav>
   
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <%= yield %>  

    
    <%= javascript_include_tag 'application' %>
  </body>
</html>
