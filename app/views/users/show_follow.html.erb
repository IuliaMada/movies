<% provide(:title, @title) %>

<div class="container fallow">
<div class="row">
  <aside class="col-md-3">
    <section >
      <%= image_tag @user.image %>
      <section class="stats">
      <%= render 'stats' %>
    </section>
      <h3><%= @user.first_name %></h3>
      <span><%= link_to "view my profile", @user %></span>
    </section>
    
  </aside>
  <div class="col-md-8 users-fallow">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul>
        <%= render @users %>
      </ul>
      
    <% end %>
  </div>
</div>
</div>