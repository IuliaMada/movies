<div class="container well">
  <div class="log-form">
    <h2>Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),:html => {:multipart => true}) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, autofocus: true, size:30 %>
      </div>
      <div class="field">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, autofocus: true,size:30 %>
      </div>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, size: 30 %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off" , size:30%>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", size:30 %>
      </div>
      <div class="field">
        <%= f.label :choose_a_picture %><br />
        <%= f.file_field :image %>
      </div><br>

      <div class="actions">
        <%= f.submit "Sign up",class:"btn btn-primary" %>
      </div>
    <% end %><br>
    <%= render "users/shared/links" %>
  </div>
</div>